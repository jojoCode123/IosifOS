{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "linux":{
                "command": "make",
                "problemMatcher":"$gcc"
            }
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "linux":{
                "command": "qemu-system-i386 -S -gdb tcp::1234 -boot d -cdrom bin/IosifOS.iso -nographic"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "Run",
            "dependsOn":[
                "Build",
                "Launch QEMU"
            ]
        }
    ]
}